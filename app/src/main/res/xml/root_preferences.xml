<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/display_header">

        <ListPreference
            app:defaultValue="system_default"
            app:entries="@array/display_modes"
            app:entryValues="@array/display_values"
            app:key="reply"
            app:title="@string/display_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/game_header">

        <EditTextPreference
            app:key="starting_life"
            app:title="@string/title_edit_starting_life"
            app:defaultValue="@string/default_life"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>